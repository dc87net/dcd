#!/usr/bin/env zsh

source "$(defaults read net.dc87.dcd installTo)/etc/colors.sh"

# Make sure there was a scriptlet specificed
[[ -z "$1" ]] && exit -100

# Parse args
CMD="$1"; shift
ARGS="$*"
#log "C:<$CMD>\t A:<$ARGS>"; echo;  # DEBUG

# Run the scriptlet
(exec eval '/opt/script/bin/"$CMD" "$ARGS"')
